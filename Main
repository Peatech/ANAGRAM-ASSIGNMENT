word_1 = str(input("Type the first word: "))
word_2 = str(input("Type the second word: "))

def find_anagram(word, anagram):
    # [assignment] Add your code here
    sort_firstWord = sorted(word)
    sort_anagram = sorted(anagram)
    if sort_firstWord == sort_anagram:
        return True
    else: 
        return False

print(find_anagram(word_1, word_2))
